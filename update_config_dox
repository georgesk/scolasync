#!/usr/bin/python3

import re,sys
sys.path=["src"]+sys.path

from version import version

infile=open("config.dox","r")
indat=infile.readlines()
infile.close()

outdat=""
for l in indat:
    outdat+=re.sub(r"^PROJECT_NUMBER[ ]+=.*", "PROJECT_NUMBER         = %s" %version(), l)

if outdat:
    outfile=open("config.dox","w")
    outfile.write(outdat)
    outfile.close()

